<resources>
    <!-- Base application theme. -->
    <style name="Theme.DenzSakura" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_process</item>
        <item name="colorPrimaryVariant">@color/cyan_process_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aquamarine</item>
        <item name="colorSecondaryVariant">@color/aquamarine_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Theme.DenzSakura.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>

        <item name="postSplashScreenTheme">@style/Theme.DenzSakura</item>
    </style>

    <style name="Theme.DenzSakura.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">10dp</item>
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.DenzSakura.ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?colorSecondary</item>
        <item name="backgroundTint">@color/gunmetal_light</item>
        <item name="iconTint">?colorSecondary</item>
    </style>

    <style name="Theme.DenzSakura.ButtonOutlined.Square" parent="Theme.DenzSakura.ButtonOutlined">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>